{
  "name": "sovreign-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "yarn compile-contract-types && next start",
    "lint": "next lint",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write \"**/*.tsx\" \"**/*.ts\"",
    "format-staged": "pretty-quick --staged",
    "lint-staged": "lint-staged",
    "postinstall": "husky install && yarn compile-contract-types",
    "analyze": "ANALYZE=true next build",
    "compile-contract-types": "typechain --target ethers-v5 --out-dir './contracts/types' './contracts/*.json'"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache",
      "pretty-quick --staged"
    ]
  },
  "dependencies": {
    "@ethersproject/address": "^5.4.0",
    "@ethersproject/contracts": "^5.4.0",
    "@ethersproject/providers": "^5.4.2",
    "@ethersproject/units": "^5.4.0",
    "@headlessui/react": "^1.3.0",
    "@metamask/detect-provider": "^1.2.0",
    "@metamask/jazzicon": "^2.0.0",
    "@metamask/onboarding": "^1.0.1",
    "@radix-ui/react-slider": "^0.0.17",
    "@walletconnect/qrcode-modal": "^1.5.5",
    "@walletconnect/web3-provider": "^1.5.5",
    "classnames": "^2.3.1",
    "dayjs": "^1.10.6",
    "eth-rpc-errors": "^4.0.3",
    "ismobilejs": "^1.1.1",
    "lodash.omit": "^4.5.0",
    "next": "11.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-feather": "^2.0.9",
    "react-hot-toast": "^2.1.0",
    "react-use": "^17.2.4",
    "swr": "^0.5.6",
    "zustand": "^3.5.8"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^11.1.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@types/classnames": "^2.3.1",
    "@types/lodash.omit": "^4.5.6",
    "@types/react": "^17.0.17",
    "autoprefixer": "^10.3.1",
    "eip1193-provider": "^1.0.1",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.0",
    "ethers": "^5.4.4",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "tailwindcss": "^2.2.7",
    "typechain": "^5.1.2",
    "typescript": "^4.3.5"
  }
}
